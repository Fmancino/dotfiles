!! Appearance
urxvt.termName: rxvt-unicode
urxvt.scrollBar: false
! urxvt.background: black
! urxvt.foreground: gray
!! Font prefferenes
! urxvt.font: xft:DejaVu Sans Mono:pixelsize=13
! urxvt.boldFont: xft:DejaVu Sans Mono:pixelsize=13:weight=bold
URxvt.font:     xft:bitstream vera sans mono:size=12:antialias=true
URxvt.boldFont: xft:bitstream vera sans mono:bold:size=12:antialias=true
urxvt.letterSpace: -1
!! Larger history limit
urxvt.saveLines: 1000000

!! Perl extensions
urxvt.perl-ext-common: default,matcher,font-size,selection-to-clipboard,url-select,keyboard-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/xdg-open

!! Open urls in browser with Control-Click
urxvt.url-launcher: /usr/bin/xdg-open
urxvt.matcher.button: 1
URxvt.matcher.rend.0: Uline Bold fg5
!! Change font size on Control-Plus/Minus
URxvt.keysym.Control-0x2b: perl:font-size:increase
URxvt.keysym.Control-0x2d: perl:font-size:decrease

! Molokai color:
